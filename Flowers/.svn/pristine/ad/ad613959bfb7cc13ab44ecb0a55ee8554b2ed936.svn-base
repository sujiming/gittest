	</body>
	<script type="text/javascript">
		//设定倒数秒数  
		var t = 5;
		//显示倒数秒数  
		function showTime() {
			t -= 1;
			document.getElementById('div1').innerHTML = t;
			if(t == 0) {
				location.href = '/Flowers/jsp/yanghu.jsp';
			}
			//每秒执行一次,showTime()  
			setTimeout("showTime()", 1000);
		}

		//执行showTime()  
		showTime();
	</script>

